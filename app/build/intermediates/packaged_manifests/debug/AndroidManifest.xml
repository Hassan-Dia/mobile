<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mentorbridge.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="34" />

    <!-- Internet permissions for online database -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <permission
        android:name="com.mentorbridge.app.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.mentorbridge.app.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.MentorBridge" >

        <!-- Splash Activity (Launcher) -->
        <activity
            android:name="com.mentorbridge.app.activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.MentorBridge.Splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Auth Activity (Login/Register) -->
        <activity
            android:name="com.mentorbridge.app.activities.AuthActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- Main Activity (Dashboard with Fragments) -->
        <activity
            android:name="com.mentorbridge.app.activities.MainActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- Mentor Detail Activity -->
        <activity
            android:name="com.mentorbridge.app.activities.MentorDetailActivity"
            android:exported="false"
            android:parentActivityName="com.mentorbridge.app.activities.MainActivity" />

        <!-- Book Session Activity -->
        <activity
            android:name="com.mentorbridge.app.activities.BookSessionActivity"
            android:exported="false"
            android:parentActivityName="com.mentorbridge.app.activities.MentorDetailActivity" />

        <!-- Mentor Profile Setup Activity -->
        <activity
            android:name="com.mentorbridge.app.activities.MentorProfileSetupActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- Mentor Waiting Approval Activity -->
        <activity
            android:name="com.mentorbridge.app.activities.MentorWaitingApprovalActivity"
            android:exported="false" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.mentorbridge.app.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.profileinstaller.ProfileInstallerInitializer"
                android:value="androidx.startup" />
        </provider>

        <uses-library
            android:name="androidx.window.extensions"
            android:required="false" />
        <uses-library
            android:name="androidx.window.sidecar"
            android:required="false" />

        <receiver
            android:name="androidx.profileinstaller.ProfileInstallReceiver"
            android:directBootAware="false"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.DUMP" >
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.INSTALL_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SKIP_FILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SAVE_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.BENCHMARK_OPERATION" />
            </intent-filter>
        </receiver>
    </application>

</manifest>